{
  "name": "ebert-haunt",
  "version": "1.3.1",
  "description": "Roger Ebert Lives Again!",
  "repository": "https://github.com/ryanmanny/ebert-haunt.git",
  "author": "Ryan Manny <ryan.w.manny@gmail.com>",
  "license": "gpl-3.0",
  "private": true,
  "scripts": {
    "build:all": "yarn build:chrome && yarn build:firefox",
    "build:chrome": "./build.sh chrome dist/chrome.zip",
    "build:firefox": "./build.sh firefox dist/firefox.xpi",
    "prettier": "prettier --write \"**/*.{js,md}\"",
    "start:firefox": "web-ext run -s scripts -t firefox-desktop --start-url rogerebert.com",
    "test:functional": "yarn build:all && pytest test/functional_tests.py",
    "version:bump": "yarn changeset version && yarn prettier"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "prettier": "^2.6.2",
    "web-ext": "^6.8.0"
  },
  "files": [
    "icons",
    "scripts",
    "manifest.json"
  ]
}
